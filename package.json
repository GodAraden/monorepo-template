{
  "name": "monorepo-template",
  "version": "1.0.0",
  "scripts": {
    "preinstall": "pnpm dlx only-allow pnpm",
    "dev": "npm-run-all -p dev:*",
    "dev:server": "cd server && pnpm vite",
    "dev:client": "cd client && pnpm vite",
    "test": "npm-run-all -p test:*",
    "test:server": "cd server && pnpm vitest",
    "test:client": "cd client && pnpm vitest",
    "build": "npm-run-all -p build:*",
    "build:server": "cd server && pnpm vite build",
    "build:client": "cd client && pnpm vite build",
    "check": "npm-run-all -p check:*",
    "check:server": "cd server && pnpm tsc -p ./tsconfig.json --noEmit",
    "check:client": "cd client && pnpm vue-tsc -p ./tsconfig.json --noEmit",
    "format": "prettier --write \"{client,server}/src/**/{*.ts,*.vue,*.json}\"",
    "lint": "eslint \"{client,server}/{src,test}/**/{*.ts,*.vue,*.json}\"",
    "clean": "rm -rf node_modules **/node_modules"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "rollup": "4.9.5",
    "typescript": "^5.3.3",
    "vite": "5.0.12",
    "vitest": "^1.2.0",
    "vue-eslint-parser": "^9.4.2"
  }
}
